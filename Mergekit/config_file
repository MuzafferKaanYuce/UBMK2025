linear_yaml_config = """
models:
  - model: model1_path
    parameters:
      weight: 0.5
  - model: model2_path
    parameters:
      weight: 0.5
merge_method: linear
dtype: float16
"""


with open('linear_config.yaml', 'w', encoding="utf-8") as f:
    f.write(linear_yaml_config)




